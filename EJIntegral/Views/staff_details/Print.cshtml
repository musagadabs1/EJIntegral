@model EJIntegral.Models.GetEmployeeInfoForPrint_Result
@{
    ViewBag.Title = "Print";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    dl{
        width:100%;
        /*border:3px double #ccc;*/
    }
    dt {
        /*text-align: right;*/
        font-weight: bold;
        color: black;
        margin-right:10px;
    }
    dd{
        /*margin:0 5px 0 110px;*/
        /*padding:0 0 0.5em 0;*/
        /*min-height:3em*/
    }
</style>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Enrollee Slip</h2>
            </div>
            <div class="card-body">
                <div class="float-left">
                    <img src="~/Captures/@Model.ImagePath" class="rounded-circle" width="100" height="80" alt="" />
                </div>

                <br />
                <dl class="dl-horizontal">

                    <dt>
                        FULL NAME:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Fullname)
                    </dd>

                    <dt>
                        DATE OF BIRTH:
                    </dt>
                    <dd>
                        @Model.DateOfBirth.Value.ToShortDateString()
                    </dd>
                    <dt>
                        PHONE NUMBER:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ContactNumber)
                    </dd>

                    <dt>
                        DEPARTMENT:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DepartmentName)
                    </dd>

                    <dt>
                        DESIGNATION:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.EntryDesignation)
                    </dd>

                    <dt>
                        ENTRY GRADE LEVEL:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.EntryGradeLevel)
                    </dd>
                    <dt>
                        ENTRY STEP:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.EntryStep)
                    </dd>

                    <dt>
                        ENTRY GRADE LEVEL:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.EntryGradeLevel)
                    </dd>
                    <dt>
                        ENTRY STEP:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.EntryStep)
                    </dd>
                    <dt>
                        ENTRY QUALIFICATION:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.EntryQualification)
                    </dd>

                    <dt>
                        CURRENT GRADE LEVEL:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CurrentGradeLevel)
                    </dd>
                    <dt>
                        CURRENT STEP:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CurrentStep)
                    </dd>

                    <dt>
                        DATE OF FIRST APPOINTMENT:
                    </dt>

                    <dd>
                        @Model.DateOfFirstAppt.Value.ToShortDateString()
                    </dd>
                    <dt>
                        ADDITIONAL QUALIFICATION:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AdditionalQualification)
                    </dd>
                </dl>
                <button type="button" onclick="window.print();" class="btn btn-primary" id="printSlip">Print</button>


            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>



